<h1> <%= @question.title %> </h1>
<p> <%= @question.body %> </p>
<p><% @question.resolved%></p>

<%= form_with model: @question do |form| %>
    <%= form.check_box :resolved, onchange: 'this.form.submit();' %>
    <%= form.label :resolved%>
<% end %>

<%= link_to "edit", edit_question_path(@question), class: "btn btn-primary"%>
<%= link_to "delete", @question, method: :delete, class: "btn btn-danger", data: {confirm: 'Are you sure you want to delete this question?'} %>
