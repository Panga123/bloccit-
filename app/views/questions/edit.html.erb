<h1>Edit Question </h1>

<%= form_with model: @question do |form|%>
    <div class="form">
        <div class="form-group">
            <%= form.label :title %>
            <%= form.text_field :title,
                placeholder: "Enter title",
                class: "form-control"
                %>
        </div>
        <div class="form-group">
            <%= form.label :body %>
            <%= form.text_area :body,
                placeholder: "Enter body text",
                class: "form-control"
            %>
        </div>
        <div class="form-group">
            <%= form.check_box :resolved %>
            <%= form.label :resolved %>
        </div>
    <%= form.submit @button_text,
        class: "btn btn-primary"
        %>
    </div>
<% end %>

